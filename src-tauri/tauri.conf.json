{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Onyx",
  "version": "0.9.7",
  "identifier": "com.onyxnotes.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Onyx",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https: data: blob:; media-src 'self' asset: https: blob:; connect-src 'self' http://127.0.0.1:* ws://127.0.0.1:* wss://* https://*; font-src 'self' data:; frame-src 'none'"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["onyx"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "desktop/onyx.desktop"
      },
      "rpm": {
        "desktopTemplate": "desktop/onyx.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
